{
  "files": [],
  "references": [
    { "path": "./apps/web" },
    { "path": "./packages/component-library" },
    { "path": "./packages/adapter" }
  ],
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@component-library/*": ["packages/component-library/src/*"],
      "@adapter/*": ["packages/adapter/src/*"]
    },
    "composite": true
  }
}
